{
  "name": "whatsapp-web-desktop",
  "productName": "WhatsApp Desktop",
  "version": "1.0.0",
  "description": "WhatsApp Web Client",
  "productDescription": "WhatsApp-web wrapped in ElectronJS as a desktop app, for linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clear-build": "rimraf dist/ release-builds/",
    "package-linux": "electron-packager . whatsapp-web-desktop --overwrite --asar --platform=linux --arch=x64 --icon=images/WhatsApp_Logo_7.png --prune=true --out=release-builds",
    "create-debian-installer": "electron-installer-debian --src release-builds/whatsapp-web-desktop-linux-x64/ --arch amd64 --config debian-config.json",
    "deb-pack-install": "npm run clear-build && npm run package-linux && npm run create-debian-installer"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anujdatar/WhatsApp-web-desktop.git"
  },
  "keywords": [
    "WhatsApp",
    "ElectronJS",
    "desktop-app-linux"
  ],
  "author": "Anuj Datar",
  "email": "anuj.datar@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anujdatar/WhatsApp-web-desktop/issues"
  },
  "homepage": "https://github.com/anujdatar/WhatsApp-web-desktop#readme",
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-installer-debian": "^1.1.0",
    "electron-packager": "^13.0.1",
    "rimraf": "^2.6.3"
  }
}
